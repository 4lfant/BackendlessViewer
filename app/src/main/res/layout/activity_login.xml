<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="36dp"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/app_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000"
        android:textSize="34sp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_intro"
        android:textColor="#424242"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_light"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/app_name_txt" />

    <TextView
        android:id="@+id/get_started_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_get_started_intro"
        android:textColor="#848484"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_light"
        android:textAlignment="center"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_qr_code"
        app:layout_constraintTop_toBottomOf="@id/get_started_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Colored" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/backendless"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>